- content_for :title do
  = h @material_category.name

- content_for :crumb do
  == #{link_to "Dashboard", admin_path} &gt;
  == #{link_to "Material Categories", admin_material_categories_path} &gt;
  = yield :title

%h1= yield :title

- form_for [:admin, @material_category], :html => {:multipart => true, :onsubmit => "form_submitted()" } do |f|
  = render :partial => "form", :locals => { :f => f }
