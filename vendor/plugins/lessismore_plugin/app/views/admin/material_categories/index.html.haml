- content_for :title do
  Material Categories

- content_for :crumb do
  == #{link_to "Dashboard", admin_path} &gt;
  = yield :title

%h1= yield :title

%p
  = icon "Plus"
  = link_to "Add a new category", new_admin_material_category_path

- for material_category in @material_categories
  %div= link_to h(material_category.name), edit_admin_material_category_path(material_category), :class => "#{material_category.css_class} big"
