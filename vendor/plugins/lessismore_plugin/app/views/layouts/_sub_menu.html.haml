%ul
  -unless @sub_pages.blank?
    -for subpage in @sub_pages
      -if subpage.status != "hidden"
        %li= link_to subpage.title, subpage 
  -if !@page.blank? 
    -if @page.permalink == "home" or @page.parent_id == 1 or @page.permalink == "blog"
      %li=link_to "Locations", "/locations"
      %li=link_to "Contact Us", "/contact-us"
  / -unless @sub_articles.blank?
  /   -for subarticle in @sub_articles
  /     %li= link_to subarticle.title, subarticle 
  -unless @sub_materials.blank?
    -for sub_material in @sub_materials
      -if sub_material.in_sub_menu
        %li= link_to sub_material.name, sub_material
    %li{:style =>"float:right;", :class => "all_materials"}
      = link_to("All Materials", material_category_path(@material_category, :anchor => "materials"))

