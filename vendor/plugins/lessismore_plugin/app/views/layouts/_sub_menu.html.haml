%ul
  -if !@page.blank? 
    -if @page.permalink == "home" or @page.parent_id == 1
      %li=link_to "Locations", "/locations"
      %li=link_to "Contact Us", "/contact-us"
  -unless @sub_pages.blank?
    -for subpage in @sub_pages
      %li= link_to subpage.title, subpage
  -unless @sub_materials.blank?
    -for sub_material in @sub_materials
      -if sub_material.in_sub_menu
        %li= link_to sub_material.name, sub_material

