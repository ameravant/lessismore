  = link_to_remote image_tag("/images/icons/16x16/Trash.png", :id => "delete_icon_#{event_price.id}", :class => "icon"),  :url => admin_event_event_price_path(@event, event_price), :confirm => "Really delete this price?", :success => "$('delete_icon_#{event_price.id}').src = '/images/spinner.gif'", :class => "icon", :method => :delete
